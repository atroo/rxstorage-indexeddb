{
  "// description": "this tsconfig is used when the types are generated",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "stripInternal": true,
    "noEmit": false,
    "types": ["jest"]
  },
  "include": ["../src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
